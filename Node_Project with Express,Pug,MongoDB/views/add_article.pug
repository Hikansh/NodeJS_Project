extends layout

block content
  h1.display-3 #{heading1}
  form(method='POST',action='/articles/add')
    .form-group
      label Title:
      input.form-control(name='title',type='text',required)
    br    
    .form-group
        label Body:
        textarea.form-control(name='body',type='text',required)
    br      
    input.btn.btn-primary(type='submit',value='Submit')                  
